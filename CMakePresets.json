{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "windows-clang-ninja-minsize",
      "displayName": "Windows LLVM-MinGW + Ninja (Minimum Size)",
      "description": "Build with LLVM-MinGW and Ninja on Windows optimized for smallest executable size",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build-minsize",
      "toolchainFile": "${sourceDir}/cmake/windows-clang-ninja-minsize.cmake",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "BUILD_SHARED_LIBS": "OFF",
        "GGML_STATIC": "ON",
        "GGML_NATIVE": "OFF",
        "GGML_AVX": "ON",
        "GGML_AVX2": "ON",
        "GGML_FMA": "ON",
        "GGML_F16C": "ON",
        "LLAMA_BUILD_TESTS": "OFF",
        "LLAMA_BUILD_EXAMPLES": "OFF",
        "LLAMA_BUILD_SERVER": "OFF"
      }
    },
    {
      "name": "windows-clang-ninja-minsize-portable",
      "displayName": "Windows LLVM-MinGW + Ninja (Minimum Size, Portable)",
      "description": "Build with LLVM-MinGW and Ninja on Windows optimized for smallest size and maximum portability",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build-minsize-portable",
      "toolchainFile": "${sourceDir}/cmake/windows-clang-ninja-minsize.cmake",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "BUILD_SHARED_LIBS": "OFF",
        "GGML_STATIC": "ON",
        "GGML_NATIVE": "OFF",
        "GGML_AVX": "OFF",
        "GGML_AVX2": "OFF",
        "GGML_FMA": "OFF",
        "GGML_F16C": "OFF",
        "LLAMA_BUILD_TESTS": "OFF",
        "LLAMA_BUILD_EXAMPLES": "OFF",
        "LLAMA_BUILD_SERVER": "OFF"
      }
    },
    {
      "name": "windows-clang-make-minsize",
      "displayName": "Windows LLVM-MinGW + Make (Minimum Size) - No File Locking Issues",
      "description": "Alternative build using MinGW Makefiles instead of Ninja to avoid file locking issues",
      "generator": "MinGW Makefiles",
      "binaryDir": "${sourceDir}/build-minsize-make",
      "toolchainFile": "${sourceDir}/cmake/windows-clang-ninja-minsize.cmake",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "BUILD_SHARED_LIBS": "OFF",
        "GGML_STATIC": "ON",
        "GGML_NATIVE": "OFF",
        "GGML_AVX": "ON",
        "GGML_AVX2": "ON",
        "GGML_FMA": "ON",
        "GGML_F16C": "ON",
        "LLAMA_BUILD_TESTS": "OFF",
        "LLAMA_BUILD_EXAMPLES": "OFF",
        "LLAMA_BUILD_SERVER": "OFF"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "windows-clang-ninja-minsize",
      "configurePreset": "windows-clang-ninja-minsize"
    },
    {
      "name": "windows-clang-ninja-minsize-portable",
      "configurePreset": "windows-clang-ninja-minsize-portable"
    },
    {
      "name": "windows-clang-make-minsize",
      "configurePreset": "windows-clang-make-minsize"
    }
  ]
}

